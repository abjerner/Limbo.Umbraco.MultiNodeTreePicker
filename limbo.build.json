{
  "tasks": {
    "postBuild": [
      {
        "alias": "zip",
        "destination": "releases/github/{packageName}.v{version}.zip",
        "files": [
          {
            "source": "src/{packageName}/bin/Release/net472/",
            "destination": "bin/",
            "patterns": [
              "Skybrud.Essentials.dll",
              "Skybrud.Essentials.xml",
              "Skybrud.WebApi.Json.dll",
              "Skybrud.WebApi.Json.xml",
              "{packageName}.dll",
              "{packageName}.xml"
            ]
          },
          {
            "source": "src/{packageName}/App_Plugins/Limbo.MultiNodeTreePicker",
            "destination": "App_Plugins/Limbo.Time/",
            "patterns": [
              "**/*.js",
              "**/*.css",
              "**/*.html",
              "**/*.xml",
              "package.manifest"
            ]
          },
          {
            "source": "src",
            "patterns": [
              "LICENSE.html"
            ]
          }
        ]
      },
      {
        "alias": "umbraco",
        "destination": "releases/umbraco/{packageName}.v{version}.zip",
        "info": {
          "name": "{packageName}",
          "version": "{version}",
          "url": "{projectUrl}",
          "license": "{license}",
          "licenseUrl": "{licenseUrl}",
          "readme": "{description}",
          "requirements": "8.6.0",
          "author": {
            "name": "{company}",
            "url": "https://www.limbo.works/"
          },
          "contributors": [
            "Anders Bjerner"
          ]
        },
        "files": [
          {
            "source": "src/{packageName}/bin/Release/net472",
            "destination": "bin/",
            "patterns": [
              "Limbo.Essentials.dll",
              "Limbo.Essentials.xml",
              "Limbo.WebApi.Json.dll",
              "Limbo.WebApi.Json.xml",
              "{packageName}.dll",
              "{packageName}.xml"
            ]
          },
          {
            "source": "src/{packageName}/App_Plugins/Limbo.MultiNodeTreePicker",
            "destination": "App_Plugins/Limbo.MultiNodeTreePicker/",
            "patterns": [
              "**/*.js",
              "**/*.css",
              "**/*.html",
              "**/*.xml",
              "package.manifest"
            ]
          }
        ]
      }
    ]
  }
}