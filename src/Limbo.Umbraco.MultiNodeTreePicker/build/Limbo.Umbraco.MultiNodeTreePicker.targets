<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <LimboUmbracoMultiNodeTreePickerContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Limbo.Umbraco.MultiNodeTreePicker\**\*.*</LimboUmbracoMultiNodeTreePickerContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyLimboUmbracoMultiNodeTreePickerAssets" BeforeTargets="Build">
        <ItemGroup>
            <LimboUmbracoMultiNodeTreePickerContentFiles Include="$(LimboUmbracoMultiNodeTreePickerContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Limbo.Umbraco.MultiNodeTreePicker files: $(LimboUmbracoMultiNodeTreePickerContentFilesPath) - #@(LimboUmbracoMultiNodeTreePickerContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(LimboUmbracoMultiNodeTreePickerContentFiles)"
            DestinationFiles="@(LimboUmbracoMultiNodeTreePickerContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Limbo.Umbraco.MultiNodeTreePicker\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearLimboUmbracoMultiNodeTreePickerAssets" BeforeTargets="Clean">
        <ItemGroup>
            <LimboUmbracoMultiNodeTreePickerDir Include="$(MSBuildProjectDirectory)\App_Plugins\Limbo.Umbraco.MultiNodeTreePicker\" />
        </ItemGroup>
        <Message Text="Clear old Limbo.Umbraco.MultiNodeTreePicker data"  Importance="high" />
        <RemoveDir Directories="@(LimboUmbracoMultiNodeTreePickerDir)"  />
    </Target>

</Project>
