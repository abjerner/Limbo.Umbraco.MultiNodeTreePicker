<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <BuildInParallel>false</BuildInParallel>
  </PropertyGroup>

  <PropertyGroup>
    <RootNamespace>Limbo.Umbraco.MultiNodeTreePicker</RootNamespace>
    <Version>1.0.0</Version>
    <Company>Limbo.dk a/s</Company>
    <Product>Limbo.Umbraco.MultiNodeTreePicker</Product>
    <Authors>Anders Bjerner</Authors>
    <Copyright>Copyright © 2021</Copyright>
    <Description>Extended multi node tree picker for Umbraco 8.</Description>
  </PropertyGroup>

  <PropertyGroup>
    <PackageTags>Limbo, Umbraco, MultiNodeTreePicker</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/abjerner/Limbo.Umbraco.MultiNodeTreePicker</PackageProjectUrl>
    <PackageIconUrl>http://www.limbo.works/favicon-32x32.png</PackageIconUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/abjerner/Limbo.Umbraco.MultiNodeTreePicker</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="System.Web" />
    <PackageReference Include="Limbo.Essentials" Version="1.1.28" />
    <PackageReference Include="Limbo.WebApi.Json" Version="1.0.4" />
    <PackageReference Include="UmbracoCms.Core" Version="8.1.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="UmbracoCms.Web" Version="8.1.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>


  <ItemGroup>
    <Content Include="App_Plugins\Limbo.MultiNodeTreePicker\**\*.css" />
    <Content Include="App_Plugins\Limbo.MultiNodeTreePicker\**\*.html" />
    <Content Include="App_Plugins\Limbo.MultiNodeTreePicker\**\*.js" />
    <Content Include="App_Plugins\Limbo.MultiNodeTreePicker\Lang\*.xml" />
  </ItemGroup>

  <!--<PropertyGroup>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>-->

  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(ConfigurationName)'=='Release' AND '$(TargetFramework)'=='net472' AND '$(BuildTools)'=='1'">
    <Exec Command="&quot;$(ProjectDir)..\build\Limbo.BuildTools.Tasks.exe&quot; &quot;postBuild&quot; &quot;$(ConfigurationName)&quot; &quot;$(ProjectPath)&quot; &quot;$(TargetPath)&quot;" />
  </Target>

</Project>